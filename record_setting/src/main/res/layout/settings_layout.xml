<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MergeRootFrame" >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/set_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:text="@string/default_record_mode"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20sp"/>
            <RelativeLayout
                android:id="@+id/record_detail"
                android:layout_below="@+id/set_default"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/record_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/settings_item_margin_top"
                    android:text="@string/record_detail_content"
                    android:textSize="25dp"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/record_width"
                    android:layout_below="@+id/record_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/settings_item_margin_top"
                    android:hint="@string/record_width"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/record_height"
                    android:layout_below="@id/record_width"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/record_height"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/record_density"
                    android:layout_below="@id/record_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/record_density"/>
                <TextView
                    android:id="@+id/choose_dir_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/record_density"
                    android:layout_marginTop="10dp"
                    android:text="@string/choose_dir_txt"/>
                <TextView
                    android:id="@+id/record_dir"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/choose_dir_title"
                    android:text="/"
                    android:textSize="20dp"
                    />
                <Button
                    android:id="@+id/record_dir_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/record_dir"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/record_btn_selector"
                    android:text="选择"
                    />
                <Button
                    android:id="@+id/confirm_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/record_dir_choose"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/pause_btn_selector"
                    android:layout_alignParentRight="true"
                    android:text="@string/setting_confrim" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
